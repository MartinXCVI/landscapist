---
import { myInfo } from "@data/myInfo"
import { siFacebook, siInstagram, siYoutube } from 'simple-icons'

const { companyName, facebook, instagram, youtube } = myInfo
---

<section class="social-media-wrapper" aria-label="Social media links section">
  <!-- Facebook -->
  <a
    href={facebook}
    class="social-media-link"
    title={`${companyName}'s Facebook account`}
    target="_blank"
    rel="noreferrer noopener"
    aria-label={`Button for going to ${companyName}'s Facebook account`}
  >
    <div class="social-icon" set:html={siFacebook.svg}></div>
  </a>
  <!-- Instagram -->
  <a
    href={instagram}
    class="social-media-link"
    title={`${companyName}'s Instagram account`}
    target="_blank"
    rel="noreferrer noopener"
    aria-label={`Button for going to ${companyName}'s Instagram account`}
  >
    <div class="social-icon" set:html={siInstagram.svg}></div>
  </a>
  <!-- YouTube -->
  <a
    href={youtube}
    class="social-media-link"
    title={`${companyName}'s YouTube channel`}
    target="_blank"
    rel="noreferrer noopener"
    aria-label={`Button for going to ${companyName}'s YouTube channel`}
  >
    <div class="social-icon" set:html={siYoutube.svg}></div>
  </a>
</section>