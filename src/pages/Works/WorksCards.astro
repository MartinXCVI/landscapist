---
interface Props {
  img1: string;
  alt1: string;
  title1: string;
  text1: string;
  img2: string;
  alt2: string;
  title2: string;
  text2: string;
}

const { img1, alt1, title1, text1, img2, alt2, title2, text2 } = Astro.props
---

<section class="work-cards-wrapper">
  <div class="work-cards-card">
    <figure class="work-cards-figure">
      <img src={img1} alt={alt1}>
    </figure>
    <h3 class="work-cards-title">{title1}</h3>
    <p class="work-cards-text">{text1}</p>
  </div>
  <div class="work-cards-card">
    <figure class="work-cards-figure">
      <img src={img2} alt={alt2}>
    </figure>
    <h3 class="work-cards-title">{title2}</h3>
    <p class="work-cards-text">{text2}</p>
  </div>
</section>