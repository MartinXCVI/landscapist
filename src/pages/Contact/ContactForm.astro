<section class="form-wrapper" id="form-wrapper" data-aos="fade-right" data-aos-duration="1750">
  <form method="POST" class="contact-form" id="contact-form">
    <fieldset class="contact-field">
      <legend>Contact Us</legend>
      <input type="hidden" name="access_key" value="277a6ba5-4c90-4e6f-9980-9d912cc2b3ee">
      <input type="hidden" name="from_name" value="Landscapist">
      <input type="checkbox" name="botcheck" id="" style="display: none;">
      <div class="contact-div">
        <label for="fullname-input" class="form-label"><i class="fa-solid fa-user"></i> Fullname</label>
        <input
          type="text"
          class="form-input contact-input" 
          name="fullname" 
          id="fullname-input"
          minlength="3"
          maxlength="75"
          placeholder="Your full name here"
          required
        >
      </div>
      <div class="contact-div">
        <label for="email-input" class="form-label"><i class="fa-solid fa-envelope"></i> Email</label>
        <input
          type="email" 
          class="form-input contact-input" 
          name="email" 
          id="email-input"
          maxlength="120"
          placeholder="Your email address here"
          required
        >
      </div>
      <div class="contact-div">
        <label for="phone-input" class="form-label"><i class="fa-solid fa-phone"></i> Phone</label>
        <input
          type="tel"
          class="form-input contact-input" 
          name="phone" 
          id="phone-input"
          minlength="10"
          maxlength="10"
          placeholder="Your phone number here"
          required
        >
      </div>
      <div class="contact-div">
        <label for="subject-input" class="form-label"><i class="fa-solid fa-pen-to-square"></i> Subject</label>
        <input 
          type="text" 
          class="form-input contact-input" 
          name="subject" 
          id="subject-input"
          minlength="6"
          maxlength="70"
          placeholder="Your message's subject here"
          required
        >
      </div>
      <div class="contact-div">
        <label for="message-input" class="form-label"><i class="fa-solid fa-message"></i> Message</label>
        <textarea
          name="message" 
          class="form-textarea contact-input" 
          rows="5" 
          id="message-input"
          minlength="30"
          maxlength="500"
          placeholder="Your detailed message here"
          required
        ></textarea>
      </div>
    </fieldset>
    <div class="form-buttons">
      <button type="submit" class="form-btn send-btn"><i class="fa-solid fa-paper-plane"></i> Send</button>
      <button type="reset" class="form-btn clear-btn"><i class="fa-solid fa-broom"></i> Clear</button>
    </div>
    <p id="contact-result"></p>
  </form>
</section>