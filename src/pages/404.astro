---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Landscapist: 404 Not Found">
  <main id="error-main">
    <section class="error-section" aria-labelledby="error-title">
      <h1 class="error-title" id="error-title">
        Oops!
      </h1>
      <p class="error-subtitle">Something went... wrong.</p>
      <p class="error-text">Or the resource that you are looking for does not exist.</p>
      <a class="error-btn" href="/" title="Go back to Home page">
        Go Back to Site
      </a>
    </section>
  </main>
</Layout>